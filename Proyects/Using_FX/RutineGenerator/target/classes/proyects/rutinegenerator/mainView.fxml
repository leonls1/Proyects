<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="564.0" prefWidth="810.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyects.rutinegenerator.controller.MainViewController">
   <children>
      <Label layoutY="542.0" text="Version 0.3" />
      <Label layoutX="303.0" layoutY="14.0" text="Rutine Generator">
         <font>
            <Font size="27.0" />
         </font>
      </Label>
      <TableView fx:id="tableRutine" layoutX="56.0" layoutY="142.0" onMouseClicked="#mouseEvent" prefHeight="350.0" prefWidth="697.0">
        <columns>
          <TableColumn fx:id="excerciceCol" prefWidth="333.0" text="Ejercicio" />
            <TableColumn fx:id="muscleCol" prefWidth="142.0" text="Musculo" />
          <TableColumn fx:id="serieCol" prefWidth="83.0" text="Series" />
            <TableColumn fx:id="repCol" prefWidth="76.0" text="Repeticiones" />
            <TableColumn fx:id="dayCol" prefWidth="62.0" text="Dia" />
        </columns>
      </TableView>
      <Button fx:id="btnGenerate" layoutX="694.0" layoutY="509.0" mnemonicParsing="false" onAction="#btnEvent" text="Generar" />
      <Button layoutX="56.0" layoutY="509.0" mnemonicParsing="false" text="Ver rutinas" />
      <HBox alignment="CENTER" layoutX="56.0" layoutY="70.0" prefHeight="56.0" prefWidth="697.0" spacing="15.0">
         <children>
            <ComboBox fx:id="cboRutineType" onAction="#cboEvent" prefWidth="150.0" promptText="Tipo de rutina" />
            <ComboBox fx:id="cboLevel" prefHeight="25.0" prefWidth="122.0" promptText="Nivel" />
            <HBox alignment="CENTER" prefHeight="39.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label text="Dias por semana" />
                  <Spinner fx:id="spinnerDays" prefHeight="25.0" prefWidth="59.0" />
               </children>
            </HBox>
            <ComboBox fx:id="cboDistribution" prefWidth="150.0" promptText="Distribucion" />
         </children>
      </HBox>
   </children>
</AnchorPane>
