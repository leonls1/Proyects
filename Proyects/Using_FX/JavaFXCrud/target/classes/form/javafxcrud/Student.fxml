<AnchorPane id="AnchorPane" prefHeight="489.0" prefWidth="513.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="form.javafxcrud.controller.StudentController">
   <children>
      <GridPane layoutX="6.0" layoutY="29.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="FIRST NAME:" GridPane.halignment="CENTER" />
            <Label text="MIDDLE NAME:" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <Label text="SURNAME:" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <GridPane layoutX="130.0" layoutY="29.0" prefHeight="90.0" prefWidth="369.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="fieldFirstName" />
            <TextField fx:id="fieldMiddleName" GridPane.rowIndex="1" />
            <TextField fx:id="fieldSurname" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <Label layoutX="37.0" layoutY="217.0" text="Search:" />
      <TextField fx:id="fieldSearch" layoutX="130.0" layoutY="213.0" prefHeight="25.0" prefWidth="369.0" promptText="Search" />
      <TableView fx:id="tableView" layoutX="6.0" layoutY="247.0" onMouseClicked="#mouseClicked" prefHeight="219.0" prefWidth="493.0">
        <columns>
            <TableColumn fx:id="colId" minWidth="0.0" prefWidth="0.0" text="Column X" />
          <TableColumn fx:id="colFirtsName" prefWidth="172.0" text="First name" />
          <TableColumn fx:id="colMiddleName" prefWidth="167.0" text="Middle name" />
            <TableColumn fx:id="colSurname" prefWidth="145.0" text="Surname" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" layoutX="14.0" layoutY="119.0" prefHeight="78.0" prefWidth="485.0" spacing="55.0">
         <children>
            <Button fx:id="btnNew" mnemonicParsing="false" onAction="#newStudent" prefHeight="25.0" prefWidth="56.0" text="New" />
            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#addStudent" prefHeight="25.0" prefWidth="51.0" text="Save" />
            <Button fx:id="btnUpdate" disable="true" mnemonicParsing="false" onAction="#updateStudent" text="Update" />
            <Button fx:id="btnDelete" disable="true" mnemonicParsing="false" onAction="#deleteStudent" text="Delete" />
         </children>
      </HBox>
   </children>
</AnchorPane>
